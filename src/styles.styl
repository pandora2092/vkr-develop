/* You can add global styles to this file, and also import other style files */

body
  min-height 100vh
  margin 0
  padding 0
  font-family 'Roboto', sans-serif

.main-wrapper
  height 100%

form .mat-error
  color #b00020

h1, h2, h3, p
  margin 0
  padding 0


table td.mat-cell
  width 20%

table tr:nth-child(even)
  background-color #e9e9e9

table tr
  transition all .3s ease

table tr:hover
  background-color #dedede
  cursor pointer

table td,
table th
  padding 20px

table
  width 100%
