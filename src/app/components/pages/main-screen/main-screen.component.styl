.main-wrapper
  &__content
    display flex
    justify-content center
    align-items center
    height calc(100vh - 60px - 71px)
    box-shadow inset 0 0 0 1000px rgba(255,255,255,.3)
    background url(../../../../assets/books-min.jpg) no-repeat
    background-size cover
  &__title
    padding 20px
    background #C8AD94
    box-shadow -4px 4px 68px -9px rgba(0,0,0,0.89)
    width 80%
    color #000
    text-align center
    font-weight 300
    line-height 1.5
    font-size 16px
